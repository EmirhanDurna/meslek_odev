#include <stdio.h>
#include <stdlib.h>

int main() {
    int notlar[5][4];

    for(int i = 0; i < 5; i++) {
        printf("Ogrencinin notlarini giriniz: %d\n", i + 1);
        for (int j = 0; j < 4; j++) {
            int gecerli = 0;
            while(!gecerli) {
                printf("Not %d: ", j + 1);
                scanf("%d", &notlar[i][j]);
                if(notlar[i][j] >= 0 && notlar[i][j] <= 100) {
                    gecerli = 1;
                } else {
                    printf("HATA! 0-100 arasi giriniz!\n");
                }
            }
        }
    }

    for(int i = 0; i < 5; i++) {
        int toplam = 0;
        for(int j = 0; j < 4; j++) {
            toplam += notlar[i][j];
        }
        float ortalama = toplam / 4.0;
        printf("Ogrenci %d ortalama: %.2f -> ", i + 1, ortalama);

        if(ortalama < 50) {
            printf("kaldi\n");
        } else {
            printf("gecti\n");
        }
    }

    return 0;
}
